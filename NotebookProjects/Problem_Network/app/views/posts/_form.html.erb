<%= form_for(@post, remote: true) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize @post.errors.count, "error" %> prohibited this post from being saved:</h2>

  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="col-md-6 create-post">
<form class="form-horizontal" >


  <div class="form-group">

    <div class="col-sm-10">
      <div class="field">
        <%= f.label :user_id %>
        <%= f.text_field :user_id,class: 'form-control', id: 'inputPassword3' %>
      </div>
    </div>
  </div>


  <div class="form-group">

    <div class="col-sm-10">
      <div class="field">
        <%= f.label :header %>
        <%= f.text_field :header,class: 'form-control', id: 'inputPassword3' %>
      </div>
    </div>
  </div>

  <div class="form-group">

    <div class="col-sm-10">

      <div class="field">  
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: '3' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">

      <div class="actions ">
        <%= f.submit type: 'submit', class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
</form>
</div>
<% end %>
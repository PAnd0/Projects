<h1>Welcome to the Problems Network</h1>

<table class="table table-striped">
  <h2>Start by posting a problem you have!</h2>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.header %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
      <tr>
        <td><%= post.body %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
      </tr>
    <% end %>
  </tbody>

</table>


<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @posts %>
  </tbody>
</table>


<br>

<p>New post form with Ajax</p> 

<%= form_for(@post, remote: true) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, id: :post_title %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content, id: :post_content %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>



<p>New post form without ajax</p>
<%= link_to 'New Post', new_post_path %>
